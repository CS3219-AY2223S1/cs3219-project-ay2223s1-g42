{
  "name": "functions",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && node esbuild.config.js",
    "dev": "docker compose up -d && yarn prisma:dev:generate --name init",
    "dev:rm": "docker compose down",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "debug": "firebase emulators:start --inspect-functions",
    "prisma:dev:generate": "dotenv -e .env.local -- yarn prisma generate",
    "prisma:dev:migrate": "dotenv -e .env.local -- yarn prisma migrate dev",
    "prisma:studio": "yarn prisma studio",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "dependencies": {
    "@prisma/client": "4.3.1",
    "@types/node": "^18.7.18",
    "axios": "^0.27.2",
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^3.23.0",
    "lodash": "^4.17.21",
    "prisma": "^4.3.1"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.43",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^11.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2",
    "prettier-plugin-prisma": "^4.2.0",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
