model QuestionSummary {
  id               Int        @id @default(autoincrement())
  acRate           Float
  difficulty       String
  paidOnly         Boolean
  title            String
  titleSlug        String     @unique
  topicTags        TopicTag[]
  hasSolution      Boolean
  hasVideoSolution Boolean
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model TopicTag {
  id        Int               @id @default(autoincrement())
  name      String            @unique
  questions QuestionSummary[]
}
